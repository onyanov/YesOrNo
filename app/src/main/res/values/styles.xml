<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bg_blue">
        <item name="android:background">@color/blue</item>
    </style>
    <style name="bg_green">
        <item name="android:background">@color/green</item>
    </style>
    <style name="bg_red">
        <item name="android:background">@color/red</item>
    </style>

    <style name="button">
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="button_green" parent="button">
        <item name="android:background">@drawable/button_green</item>
    </style>
    <style name="button_red" parent="button">
        <item name="android:background">@drawable/button_red</item>
    </style>
    <style name="button_blue" parent="button">
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="AlertDialogCustom">

    </style>

    <style name="score" parent="android:Widget.TextView">
        <item name="android:drawableLeft">@drawable/ic_star</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="question" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
